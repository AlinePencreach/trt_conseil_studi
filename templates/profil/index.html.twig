{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-fluid m-5">
{% for message in app.flashes('success') %}
    <div class="alert alert-success m-5">
        {{ message }}
    </div>
{% endfor %}
    
    
<h1 class="display-3">Votre profil</h1>

  <div>
    <h2 class="text-decoration-underline">Voici vos information : </h2>
	<p>{{ app.user.name }}</p>
	<p>{{ app.user.email }}</p>
	<p>{{ app.user.metier }}</p>
	<p>{{ app.user.CV }}</p>

  </div>

    
     <p>
     <a class="btn btn-secondary"href="{{ path('app_profil_edit', {id: app.user.id}) }}">Modifier ou compl√®ter votre profil</a>
     </p>

</div>
{% endblock %}
