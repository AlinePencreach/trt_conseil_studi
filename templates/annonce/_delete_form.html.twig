{% if (app.user ==  annonce.auteur) or (is_granted ('ROLE_CONSULTANT'))%}
<form method="post" action="{{ path('app_annonce_delete', {'id': annonce.id}) }}" onsubmit="return confirm('Êtes vous sur de vouloir supprimer cette annonce ? Cette action est définitive');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
    <button class="btn btn-danger">Supprimer l'annonce</button>
</form>
{% endif %}

